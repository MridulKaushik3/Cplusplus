using namespace std;

int add(int a, int b)
{
    int c = a + b;
    return c;
}
class Employee
{
public:
    string name;
    int salary;
    Employee(string name, int salary)
    {
        this->name = name;
        this->salary = salary;
    }
    void printDetails()
    {
        cout << "The name of first employe is " << this->name << " and his salary is " << this->salary << "$" << endl;
    }
};
